<section class="container mb-5">
  <div class="col-12 "style='margin-top: 11em;' >
   <div class="mb-3"> <a href="/admin/add-products" class="btn btn-success ">AddProduct</a></div>
    
    <table id='productTable' class="table table-bordered table-striped table-order-history ">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Price</th>
          <th scope="col">Image</th>
          <th scope="col">Options</th>

        </tr>
      </thead>
      <tbody>
        {{#each product}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.Name}}</td>
          <td>{{this.category}}</td>
          <td>${{this.price}}</td>
          <td><img src='/images/{{this._id}}.png' style="width: 50px;height: 50px;"></td>
          <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary ml-1">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger "
              onclick="return confirm('Are You Want To Delete ?')">Delete</a>
          </td>

        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
<script>
  $(function () {
    $('#productTable').DataTable();
} );
</script>
