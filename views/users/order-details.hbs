<div class="pb-5" style="margin-top: 10em;">
  <div class="container ">
    <div class="row">
      <div class="col-lg-12 p-5 bg-white rounded shadow-sm ">

        <!-- Shopping cart table -->
        <div class="table-responsive">

          <table class="table">
            <thead>
              <tr>
                <th scope="col" class="border-0 bg-light">
                  <div class="p-2 px-3 text-uppercase">Product</div>
                </th>
                <th scope="col" class="border-0 bg-light">
                  <div class="py-2 text-uppercase">Quantity</div>
                </th>
                <th scope="col" class="border-0 bg-light">
                  <div class="py-2 text-uppercase ">Total Price</div>
                </th>

              </tr>
            </thead>

            <tbody>
              {{#each history.ProductDetalis}}
              <tr>

                <th scope="row" class="border-0">
                  <div class="p-2">
                    <img src="/images/{{this.product._id}}.png" alt="" width="70" class="img-fluid rounded shadow-sm">
                    <div class="ml-3 d-inline-block align-middle">
                      <h6 class="mb-0">
                        <class="text-dark d-inline-block align-middle">{{this.product.Name}}
                      </h6><span class="text-muted font-weight-normal font-italic d-block">Category:
                        {{this.product.category}}</span>
                      <span class="text-muted font-weight-normal font-italic d-block">Price:
                        ${{this.product.price}}</span>
                    </div>
                  </div>
                </th>

                <td class="border-0 align-middle"><strong>{{this.quantity}}</strong></td>
                <td class="border-0 align-middle"><strong>$ {{this.total}}</strong></td>

              </tr>
              {{/each}}
              {{!-- border-top:1px; --}}
            </tbody>

          </table>

        </div>
        <!-- End -->
      </div>
    </div>

    <div class="col-lg-12">
      <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Shipping Address</div>
      <div class="p-4">
        <p class="font-italic mb-4"><strong>{{history.details.firstName}}
            {{history.details.lastName}}<br>{{history.details.address}}<br>{{history.details.country}}<br>{{history.details.state}}<br>{{history.details.zip}}<br>{{history.details.email}}
          </strong> </p>
        <ul class="list-unstyled mb-4">
          <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Order Subtotal
            </strong><strong>$<span id='subtotal'>{{subtotal}}</span></strong></li>
          <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Shipping and
              handling</strong><strong>$10</strong></li>

          <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Total</strong>
            <h5 class="font-weight-bold">$<span id='total'>{{history.details.TotalPrice}}</span></h5>

          </li>
        </ul>
      </div>
    </div>
  </div>

</div>
</div>
</div>
</section>